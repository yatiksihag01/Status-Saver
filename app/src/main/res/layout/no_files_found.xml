<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/no_files_found"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/no_files_img"
        android:layout_width="127dp"
        android:layout_height="133dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.283"
        tools:src="@drawable/camera_icon" />

    <TextView
        android:id="@+id/no_files_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Files Found"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/no_files_text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no_files_img"
        app:layout_constraintVertical_bias="0.698"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/no_files_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="@string/noFiles"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/no_files_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no_files_img"
        app:layout_constraintVertical_bias="0.662" />

    <Button
        android:id="@+id/no_files_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#499B54"
        android:text="Open"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no_files_img"
        app:layout_constraintVertical_bias="0.287"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>